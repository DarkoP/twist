<div class='row'>
  <%= simple_form_for @account, id: "payment-form" do |account| %>
    <div class='col-md-offset-2 col-md-4 content'>
      <h2>Create a new account</h2>

      <%= account.input :name %>
      <%= account.input :subdomain %>

      <%= account.fields_for :owner do |owner| %>
        <%= owner.input :email %>
        <%= owner.input :password %>
        <%= owner.input :password_confirmation %>
      <% end %>
    </div>
    <div class='col-md-4 content'>
      <h3>Select a plan</h3>
      <% @plans.each do |plan| %>
        <%= account.radio_button :plan_id, plan.id %>
        <%= account.label "plan_id_#{plan.id}", plan.name %> ($<%= plan.price %>)<br>
      <% end %>

      <div id='payment-form'>
        <h4>Enter your payment details</h4>
      </div>
      <%= account.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<script src="https://js.braintreegateway.com/v2/braintree.js"></script>
<script>
braintree.setup("<%= @client_token %>", "dropin", {
  container: "payment-form"
});
</script>
